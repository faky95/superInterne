<div class="row">
              <div class="col-lg-12">
			    <div class="panel panel-default gradient">
			        <div class="panel-heading">
			            <h4>
			                <span>Actions correctives de cette signalisation</span>
			            </h4>
			        </div>
			        <div class="panel-body noPad clearfix">
			            <table cellpadding="0" cellspacing="0" border="0" class="dynamicTable display table table-bordered" width="100%">
			                <thead>
			                    <tr>
									<th>Action</th>
								    <th>Porteur</th>
								    <th>Etat</th>
								    <th>Actions</th>
			                    </tr>
			                </thead>
			                <tbody>
			                {% if actions is defined and actions is not empty %}
			                	{% for action in actions %}
				                    <tr class="odd gradeX">
										<td align="center" width="110px">{{ action.libelle }}</td>
										<td align="center" width="150px">{{ action.porteur }}</td>
										<td align="center" width="180px">{{ action|get_statut }}</td>
										<td align="center" width="130px">
											<div class="btn-group">
									      		<a class="btn btn-default" href="{{ path('details_action', { 'id': action.id }) }}" title="DÃ©tails sur l'action "><span class="icomoon-icon-eye"></span></a>
									          	<a class="btn btn-default" href="{{ path('edition_action', { 'id': action.id }) }}" title="Modifier l'action"><span class="icomoon-icon-pencil-3"></span></a>
									          	<a class="btn btn-default" href="#" title="Supprimer l'action"><span class="icomoon-icon-remove-4"></span></a>
								       		</div>
										</td>
				                    </tr>
	                    		{% endfor %}
	                    	{% endif %}
	                </tbody>
	            </table>
	        </div>
	    </div><!-- End .panel -->
	</div><!-- End .span12 -->
</div>