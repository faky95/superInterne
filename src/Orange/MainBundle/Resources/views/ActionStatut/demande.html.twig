{% form_theme form 'OrangeMainBundle:FormTheme:fields.html.twig' %}

<div class="modal-header">
	<button type="button" class="close" data-dismiss="modal">
		<span class="icon12 minia-icon-close"></span>
	</button>
	<h4 align="left">
		<span class="icon16 icomoon-icon-earth"></span>
       	<span>Confirmez la validation</span>
	</h4>
</div>
<form class="form-horizontal" action="{{ path('demande_action', {action_id: entity.id }) }}" method="POST" novalidate="novalidate" role="form">
	<div class="panel-body">
		<p>Vous êtes sur le point d'effectuer une validation de la demande. Vous êtes priés de confirmer l'action.</p>
		{{ form_row(form.commentaire)}} 
		{{ form_widget(form._token) }}
		<!-- End .form-group  -->
	</div>
	<div class="form-actions">
		<div class="col-lg-offset-2 col-lg-9">
			<a href="#" data-target="#myModal" class="btn btn-success submitLink" call="redirectModalToUrl">Confirmer</a>
			<a href="#" class="btn btn-primary" data-dismiss="modal">Fermer</a>
		</div>
	</div>
</form>