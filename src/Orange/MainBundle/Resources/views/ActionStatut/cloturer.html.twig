{% form_theme form 'OrangeMainBundle:FormTheme:fields.html.twig' %}

<div class="modal-header">
	<button type="button" class="close" data-dismiss="modal">
		<span class="icon12 minia-icon-close"></span>
	</button>
	<h4 align="left">
		<span class="icon16 icomoon-icon-earth"></span>
       	<span>Fin d'exécution d'une action</span>
	</h4>
</div>
<form novalidate="novalidate" class="form-horizontal" action="{{ path('cloturer_action', {action_id: action.id}) }}" method="post" {{ form_enctype(form) }} role="form">
	<div class="panel-body">
		<p>Vous avez fini le traitement de cette action, vous êtes entrain de mettre fin à son exécution.</p>
		<div class="form-group">
			{{ form_widget(form.dateFinExecut,  {'attr': {'class': 'datepicker'}}) }}
		</div>
		{{ form_row(form.commentaire)}}
		<div class="todo">
			<h4>Le(s) ERQ(s) <a href="#myModal" style="float: right;"><span class="icon12 cut-icon-plus"></span></a>
		</div>
		{% for erqForm in form.erq %}
		    <div>{{ form_widget(erqForm.file)}}</div> 
		{% endfor %}
		{{ form_widget(form._token) }}
		<!-- End .form-group  -->
	</div>
	<div class="form-actions">
		<div class="col-lg-offset-3 col-lg-9">
		{{ form_widget(form.save,{attr: {'data-target': '#myModal', 'call': 'redirectModalToUrl', 'class':'btn btn-warning submitLink'}} ) }}
			{{ form_widget(form.cancel, {attr: {class: 'btn btn-die'}}) }}
		</div>
	</div>
</form>
