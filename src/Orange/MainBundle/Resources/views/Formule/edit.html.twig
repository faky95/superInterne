{% extends '::base.html.twig' %}
{% block content -%}
<div class="row">
	
	<div class="col-lg-12">
		<div class="panel panel-default">
			<div class="panel-heading">
			    <h4> 
			        <span>Modification de formule</span>
			    </h4>
			</div>
			   <div class="panel-body row" style="margin-left:0; margin-right:0;">
                                 <div class="you col-lg-6 col-md-6 col-sm-6" >
                                    <ul class="list-unstyled">
								    	{% for ref in references %}
								    	 	<li><span class="icon16 icomoon-icon-arrow-right-3"></span>{{ ref.libelleStatut }} :<strong style="color: #ff6600;margin-left: 10px;">{{ ref.symbole }}</strong></li>
								    	{% endfor %}
					                </ul>
                                 </div>    
                                 <div class="you col-lg-6 col-md-6 col-sm-6" >
                                	 <form novalidate="novalidate" class="form-horizontal" action="{{ path('edition_formule', {id : entity.id}) }}" method="post" role="form">
						                {{ form_row(edit_form.libelle,  {'attr': {'class': 'form-control'}}) }}
						                {{ form_row(edit_form.num, {'attr': {'class': 'select2 form-control'}}) }}
						                {{ form_row(edit_form.denom,  {'attr': {'class': 'select2 form-control'}}) }}
						                {{ form_row(edit_form.visibilite,  {'attr': {'class': 'form-control'}}) }}
										{{ form_row(edit_form._token) }}
							            <div class="form-group">
							             <!-- Color picker  -->                      
					<div class="form-group">
						<label class="col-lg-2 control-label" for="picker">Couleur :</label>
						<div class="col-lg-9">
							<input type="text" id="color" name="{{ edit_form.couleur.vars.full_name }}" value="#123456" class="form-control" />
							<div class="picker"></div>
						</div>
					</div>
                    <!-- End .ColorPicker  -->
											<div class="col-lg-offset-3 col-lg-9">
											    {{ form_widget(edit_form.add) }}
											    {{ form_widget(edit_form.cancel, {attr: {class: 'btn btn-die'}}) }}
											</div>
										</div><!-- End .form-group  -->   
									</form>
                                </div>
               </div>
 			
			</div>
		</div><!-- End .panel -->
	</div><!-- End .span6 -->
</div>
{% endblock %}

