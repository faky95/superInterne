<div class="modal-header">
	<button type="button" class="close" data-dismiss="modal">
		<span class="icon12 minia-icon-close"></span>
	</button>
	<h4 align="left">
		<span class="icon16 icomoon-icon-earth"></span>
       	<span>RÃ©-assignation de l'action {{ entity.reference }}</span>
	</h4>
</div>
<form novalidate="novalidate" class="form-horizontal" action="{{ path('reassignation_action', {action_id : entity.id}) }}" method="post" role="form">
	<div class="panel-body">
		{{ form_row(form.porteur,  {'attr': {'class': 'form-control'}}) }}
		{{ form_row(form._token) }}
		<!-- End .form-group  -->
	</div>
	<div class="form-actions">
		<div class="col-lg-offset-3 col-lg-9">
			{{ form_widget(form.save,{attr: {'data-target': '#myModal', 'call': 'refreshAfterSuccess', 'class':'btn btn-warning submitLink'}} ) }}
			{{ form_widget(form.cancel, {attr: {class: 'btn btn-die', 'data-dismiss': 'modal'}}) }}
		</div>
	</div>
</form>
