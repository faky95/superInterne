<div class="modal-header">
	<button type="button" class="close" data-dismiss="modal">
		<span class="icon12 minia-icon-close"></span>
	</button>
	<h4 align="left">
		<span class="icomoon-icon-filter-2"></span>
       	<span>Filtrer Structures</span>
	</h4>
</div>
<form novalidate="novalidate" class="form-horizontal" action="{{ path('filtrer_structures') }}" method="post">
	<div class="panel-body">
		{{ form_row(form.parent, {'attr': {'class': 'select2 form-control'}} )}}
		{{ form_row(form.typeStructure, {'attr': {'class': 'select form-control'}} )}}
		{{ form_row(form._token) }}
		<!-- End .form-group  -->
	</div>
	<div class="form-actions">
		<div class="col-lg-offset-3 col-lg-9">
			{{ form_widget(form.filtrer,{attr: {'data-target': '#myModal', 'call': 'afterSuccesRequest'}} ) }}
{# 			{{ form_widget(form.cancel, {attr: {class: 'btn btn-die'}}) }}#}
		</div>
	</div>

</form>
<script type="text/javascript">
todoAfterAjaxThread.afterSuccesSubmitModal = function(response) {
	$('#myModal .close').click();
	$('#structureTable').dataTable().fnDraw();
}
</script>


