{% extends '::base.html.twig' %}

{% form_theme edit_form 'OrangeMainBundle:FormTheme:smallfields.html.twig' %}

{% block content -%}
<!-- heading -->
<div class="heading">
	<h3>{% block page_title %} Modification de la structure {% endblock %}</h3>                    
</div>
<!-- End .heading-->
<div class="row">
	<div class="col-lg-12">
		<div class="panel panel-default">
			<div class="panel-heading">
			    <h4> 
			        <span>Modifier une structure</span>
			    </h4>
			</div>
			<div class="panel-body">
			    <form novalidate="novalidate" class="form-horizontal" action="{{ path('modifier_structure', {'id': entity.id}) }}" method="post" role="form">
	                {{ form_widget(edit_form.libelle,  {'attr': {'class': 'form-control'}}) }}
					{{ form_widget(edit_form.typeStructure,  {'attr': {'class': 'nostyle form-control'}}) }}
					<div style="display: {{ has_rights('ROLE_SUPER_ADMIN') ? 'block' : 'none' }};">
					    {{ form_widget(edit_form.buPrincipal,  {'attr': {'class': 'nostyle form-control'}}) }}
					</div>
	                {{ form_widget(edit_form.parent,  {'attr': {'class': 'nostyle form-control'}}) }}
					{{ form_widget(edit_form.bu, {'attr': {'class': 'select2 form-control'}}) }}
					{{ form_widget(edit_form.rapporteurs, {'attr': {'class': 'select2 form-control'}}) }}
					{{ form_widget(edit_form._token) }}
			       	<div class="form-group">
			        	<div class="col-lg-offset-3 col-lg-9">
						    {{ form_widget(edit_form.add) }}
						    {{ form_widget(edit_form.cancel, {attr: {class: 'btn btn-die'}}) }}
						</div>
					</div><!-- End .form-group  -->   
				</form>
			</div>
		</div><!-- End .panel -->
	</div><!-- End .span6 -->
{# 	{{ render(controller('OrangeMainBundle:Structure:liste')) }}#}
</div>
{% endblock %}

{% block pagescript %}
	{% include 'OrangeMainBundle:ModalScript:confirm.html.twig' %}
{% endblock %}