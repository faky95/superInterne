{% extends '::base.html.twig' %}


{% block content -%}
	<!-- heading -->
	<div class="heading">
		<h3>{% block page_title %} Liste des structures {% endblock %}</h3>                    
	</div>
	<!-- End .heading-->
	<div class="row">
                        <div class="col-lg-12">
                            <div class="panel panel-default gradient">
                                <div class="panel-heading">
                                    <h4>
                                        <span class="icon16 brocco-icon-grid"></span>
                                        <span>Liste des Structures</span>
                                        <div style="float: right"><a data-toggle="modal" data-target="#myModal" href="#myModal" class="actionLink" modal-url="{{ path('filtrer_structures')}}"title="filtrer"><span class="icon16  icomoon-icon-filter"></span></a></div>
                                    </h4>
                                </div>
                                <div class="panel-body noPad clearfix">
