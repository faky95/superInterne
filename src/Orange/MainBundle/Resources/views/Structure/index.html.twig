                                        <tr>
                                        	<td colspan="4">chargement des donnees</td>
                                        </tr>
                                        </tbody>
                                    </table>
                            </div><!-- End .panel -->

                        </div><!-- End .span12 -->

					</div><!-- End .row --> 
	
	
	
	
    
{% endblock %}
