                            <!-- entete -->
                            <tr class="pagetoplogo">
                                <td class="w640"  width="640">
                                    <table  height="90" class="w640"  width="640" cellpadding="0" cellspacing="0" border="0" bgcolor="#000000">
                                        <tbody>
                                            <tr>
                                                <td class="w30"  width="30"></td>
                                                <td  class="w580"  width="580" valign="middle" align="left">
                                                   
                                                   <span style="font-weight: 100;color: #FF6600; font-size: 40px">SUPER</span>
                                                   
                                                </td> 
                                                <td class="w30"  width="30"></td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </td>
                            </tr>

                            <!-- separateur horizontal -->
                            <tr>
                                <td  class="w640"  width="640" height="1" bgcolor="#d7d6d6"></td>
                            </tr>
							
							<!-- contenu -->
								 <tr class="content">
								     <td class="w640" class="w640"  width="640" bgcolor="#ffffff">
								         <table class="w640"  width="640" cellpadding="0" cellspacing="0" border="0">
								             <tbody>
								                 <tr>
								                     <td  class="w30"  width="30"></td>
								                     <td  class="w580"  width="580">
								                         <!-- une zone de contenu -->
								                         <table class="w580"  width="580" cellpadding="0" cellspacing="0" border="0">
															  <tbody>      
															      <tr>
															          <td class="w580"  width="580">
															              <h2 style="color:#FF6600; font-size:22px; padding-top:12px;">
															                  Nouvelle Action  
															              </h2>
															
															              <div width="580" align="left" class="article-content">
															              	Bonjour {{ data.porteur.nomComplet }},<br><br>
															                  <p>
															                  	l'action  {{ data.reference }} vous a été affectée par {{ data.animateur.nomComplet }}.
															                  	Vous êtes invité à confirmer sa prise en charge.
															                  </p>
															                  <br>
															              </div>
															          </td>
															      </tr>
															      <tr>
															          <td class="w580"  width="580" height="1" bgcolor="#c7c5c5"></td>
															      </tr>
															  </tbody>
								                         </table>
								                         <!-- fin zone -->  
										                         <table class="w580" width="580" cellspacing="0" cellpadding="0" border="0">
																	  <tbody>
																	      <tr>
																	          <td colspan="2">
																	             <h2 style="color:#FF6600; font-size:22px; padding-top:12px;">
																	                  Informations sur l'action 
																	             </h2>
																	          </td>
																	      </tr>
																	  </tbody>
										                         </table>                      
										                         <!-- une autre zone de contenu -->
										                         <table class="w580" width="580" cellspacing="0" cellpadding="0" border="1">
																	  <tbody align="left">
																	      <tr>
																	          <td width="200" valign="top">
																	                  <p> <b>Libellé de l'action </b></p>
																	          </td>  
																	          <td  valign="top">
																	                  <p> {{ data.libelle }}</p>
																	          </td>          
																	      </tr>
																	      <tr>
																	          <td  width="200" valign="top">
																	                  <p> <b>Référence de l'action </b></p>
																	          </td>  
																	          <td  valign="top">
																	                  <p> {{ data.reference }}</p>
																	          </td>          
																	      </tr>
																	      <tr>
																	          <td  width="200" valign="top">
																	                  <p> <b>Porteur </b></p>
																	          </td>  
																	          <td  valign="top">
																	                  <p> {{ data.porteur }}</p>
																	          </td>          
																	      </tr>
																	      <tr>
																	          <td  width="200" valign="top">
																	                  <p> <b>Contributeurs</b></p>
																	          </td>  
																	          <td valign="top">
																	          {% if data.contributeur is defined and data.contributeur is not empty %}
																	                  <ul>
																	                  	{% for uncontributeur in data.contributeur %}
																	                      <li> {{ uncontributeur.utilisateur.nomComplet }}</li>
																	                     {% endfor %}
																	                  </ul>
																	          {% else %}
																	          		  <p> Pas de contributeur .</p>
																	          {% endif %}
																	          </td>          
																	      </tr>
																	      <tr>
																	          <td  width="200" valign="top">
																	                  <p> <b>Domaine</b></p>
																	          </td>  
																	         <td  valign="top">
																	                  <p> {{ data.domaine }} </p>
																	          </td>           
																	      </tr>
																	      <tr>
																	          <td  width="200" valign="top">
																	                  <p> <b>Type d'action</b></p>
																	          </td>  
																	         <td  valign="top">
																	                  <p>{{ data.typeAction }} </p>
																	          </td>           
																	      </tr>
																	      <tr>
																	          <td  width="200" valign="top">
																	                  <p> <b>Instance</b></p>
																	          </td>  
																	         <td  valign="top">
																	                  <p>{{ data.instance }}</p>
																	          </td>           
																	      </tr>
																	      <tr>
																	          <td  width="200" valign="top">
																	                  <p> <b>Date de début</b></p>
																	          </td>  
																	         <td  valign="top">
																	                  <p>{{ data.dateDebut| date('d/m/Y') }}</p>
																	          </td>           
																	      </tr>
																	      <tr>
																	          <td  width="200" valign="top">
																	                  <p> <b>Délai Initial</b></p>
																	          </td>  
																	         <td  valign="top">
																	                  <p>{{ data.dateInitial| date('d/m/Y') }}</p>
																	          </td>           
																	      </tr>
																	  </tbody>
										                         </table>
										                         <table align="right" class="w580"  width="580" cellpadding="0" cellspacing="0" border="0">
																	  <tbody >
																	      <p align="right"><em>Pour plus d'infos sur cette action, <a target="_blank" href="{{ url('details_action', {'id': data.id}) }}">Cliquez ici</a></em></p>
																	  </tbody>
								                         		</table>
								                     </td>
								                     <td class="w30" height="10" class="w30"  width="30"></td>
								                 </tr>
								             </tbody>
								         </table>
								     </td>
								 </tr>
