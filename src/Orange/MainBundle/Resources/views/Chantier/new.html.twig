{% extends '::base.html.twig' %}


{% block content -%}
<div class="row">
	<div class="col-lg-12">
		<div class="panel panel-default">
			<div class="panel-heading">
			    <h4> 
			        <span>Ajouter un chantier</span>
			    </h4>
			</div>
			<div class="panel-body">
			    <form novalidate="novalidate" class="form-horizontal" action="{{ path('creer_chantier') }}" method="post" role="form">
	                {{ form_row(form.libelle,  {'attr': {'class': 'form-control'}}) }}
					{{ form_row(form.description,  {'attr': {'class': 'nostyle form-control'}}) }}
	                {{ form_row(form.projet,  {'attr': {'class': 'select'}}) }}
	                {{ form_row(form.tmp_membre,  {'attr': {'class': 'select2 form-control'}}) }}
	                {{ form_row(form._token) }}
			             <div class="form-actions">
							<div class="col-lg-offset-3 col-lg-9">
							    {{ form_widget(form.add) }}
							    {{ form_widget(form.cancel, {attr: {class: 'btn btn-die'}}) }}
							</div>
						</div><!-- End .form-group  -->  
				</form>
			</div>
		</div><!-- End .panel -->
	</div><!-- End .span6 -->
</div>
{% endblock %}

{% block pagescript %}
{% endblock %}