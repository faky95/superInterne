{% extends '::base.html.twig' %}

{% block content -%}
<div class="heading">
	<h3>{% block page_title %} Liste des chantiers du projet <span style="color: #f60;">{{ projet }}</span>{% endblock %}   </h3> 
	{% include 'OrangeMainBundle:Projet:header_projet.html.twig' with {entity: projet } %}
</div>
<div class="row">
    <div class="col-lg-12">
    	<div class="row">
    		<div class="col-lg-8">
    			 <a href="{{ path('nouveau_chantier', {projet_id: projet.id}) }}"><button class="btn btn-warning"><span class="icon16 icomoon-icon-plus white"></span> Ajouter d'un chantier</button></a>
    			 <div class="marginB10"></div>
    		</div><!-- End .span4 -->
    	</div>
        <div class="panel panel-default gradient">
            <div class="panel-heading">
                <h4>
                    <span>Liste des Chantiers</span>
                </h4>
            </div>
            <div class="panel-body noPad clearfix">
                <table id="chantierTable" cellpadding="0" cellspacing="0" border="0" class=" display table table-bordered" width="100%">
                    <thead>
                        <tr>
                           <th>Chantier</th>
						    <th>Chef de projet</th>
						    <th>Date de cr√©ation</th>
						    <th width="150px">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    	<tr><td colspan="4">Chargement des donnees ...</td>
                    	</tr>
                    </tbody>
                </table>
            </div>
        </div><!-- End .panel -->
    </div><!-- End .span12 -->
</div><!-- End .row --> 
 {% endblock %}
{% block pagescript %}
{{ parent() }}
	{{ block_render('::form_div_layout.html.twig','datatable_options',{with_tag: 1}) }}
	{% include 'OrangeQuickMakingBundle:Extra:datatable.html.twig' with {idTable: 'chantierTable', url: path('liste_des_chantiers', {projet_id: projet.id}), nosorting: {0:1, 1:3}  } %}
{% endblock %}
 