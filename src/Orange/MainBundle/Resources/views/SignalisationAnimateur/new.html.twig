
<div class="modal-header">
	<button type="button" class="close" data-dismiss="modal">
		<span class="icon12 minia-icon-close"></span>
	</button>
	<h4 align="left">
		<span class="icon16 icomoon-icon-earth"></span>
       	<span>Modifier l\'animateur</span>
	</h4>
</div>
<form novalidate="novalidate" class="form-horizontal" action="{{ path('creer_signalisation_animateur', {signalisation_id: signalisation.id}) }}" method="post" role="form">
	<div class="panel-body">
		{{ form_row(form.utilisateur,  {'attr': {'class': 'select form-control'}})}}
		{{ form_row(form.commentaire)}}
		{{ form_widget(form._token) }}
		<!-- End .form-group  -->
	</div>
	<div class="form-actions">
		<div class="col-lg-offset-3 col-lg-9">
			{{ form_widget(form.save,{attr: {'data-target': '#myModal', 'class' : 'btn btn-success submitLink', 'call': 'redirectModalToUrl'}} ) }}
			{{ form_widget(form.cancel, {attr: {class: 'btn btn-die'}}) }}
		</div>
	</div>
</form>

