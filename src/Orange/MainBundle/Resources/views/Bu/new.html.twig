<div class="modal-header">
	<button type="button" class="close" data-dismiss="modal"><span class="icon12 minia-icon-close"></span></button>
    <h3>Ajout Bu</h3>
</div>
<form novalidate="novalidate" class="form-horizontal" action="{{ path('creer_bu') }}" method="post" role="form">
	<div class="panel-body">
		{{ form_row(form.libelle,  {'attr': {'class': 'form-control'}}) }}
        {{ form_row(form.niveauValidation,  {'attr': {'class': 'form-control'}}) }}
        {{ form_row(form._token) }}
    </div>
	<div class="form-actions">
		<div class="col-lg-offset-3 col-lg-9">
			{{ form_widget(form.add, {attr: {'data-target': '#myModal', 'call': 'redirectModalToUrl', 'class':'btn btn-warning submitLink'}} ) }}
			{{ form_widget(form.add_and_new_structure, {attr: {'data-target': '#myModal', 'call': 'redirectModalToUrl', 'class':'btn btn-warning submitLink'}} ) }}
		</div>
	</div><!-- End .form-group  -->
</form>