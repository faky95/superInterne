{% extends '::base.html.twig' %}

{% block content -%}
<!-- heading -->
<div class="heading">
	<h3>{% block page_title %} Liste des instances {% endblock %}</h3>                    
</div>
<!-- End .heading-->
<div class="row">
        <div class="col-lg-12">
        	<div class="row">
				<div class="col-lg-8">
					 <a href="{{ path('nouvelle_instance') }}" target="_blank"><button class="btn btn-warning"><span class="icon16 icomoon-icon-plus white"></span> Ajouter une instance </button></a>
					 <a href="{{ path('export_instance') }}"><button class="btn btn-success"><span class="icon16 entypo-icon-export white"></span>Exporter les instances</button></a>
					 <div class="marginB10"></div>
				</div><!-- End .span4 -->
	 		</div>
            <div class="panel panel-default gradient">
                <div class="panel-heading">
                    <h4>
                        <span>Liste des Instances</span>
                    </h4>
                </div>
                <div class="panel-body noPad clearfix">
                    <table id="instanceTable" cellpadding="0" cellspacing="0" border="0" class=" display table table-bordered" width="100%">
                        <thead>
                            <tr>
				                <th>Libelle</th>
				                <th>Description</th>
				                <th width="200px">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        	<tr>
                        		<td colspan="3">Chargement des donnees ...</td>
                        	</tr>
                        </tbody>
                    </table>
                </div>
            </div><!-- End .panel -->

        </div><!-- End .span12 -->

	</div><!-- End .row --> 
 {% endblock %}
{% block pagescript %}
{{ parent() }}
	{{ block_render('::form_div_layout.html.twig','datatable_options',{with_tag: 1}) }}
	{% include 'OrangeQuickMakingBundle:Extra:datatable.html.twig' with {idTable: 'instanceTable', url: path('liste_des_instances') } %}
{% endblock %}