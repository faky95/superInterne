{% extends '::base.html.twig' %}

{% block content -%}
<div class="row">
	<div class="col-lg-12">
		<div class="panel panel-default">
			<div class="panel-heading">
			    <h4> 
			        <span>Traitement de la demande de report</span>
			    </h4>
			</div>
			<div class="panel-body">
			    <form novalidate="novalidate" class="form-horizontal" action="{{ path('reporter_update', {id:entity.id}) }}" method ="post" role="form">
	                {{ form_row(edit_form.date,  {'attr': {'class': 'form-control'}}) }}
					{{ form_row(edit_form.description,  {'attr': {'class': 'nostyle form-control'}}) }}
	                {{ form_row(edit_form._token) }}
	                <div class="form-group">
	                	<div class="col-lg-offset-3 col-lg-12">
						    {{ form_row(edit_form.valider) }}
						    {{ form_row(edit_form.invalider) }}
						    {{ form_row(edit_form.modifier) }}
					    </div>
					</div><!-- End .form-group  -->
				</form>
			</div>
		</div><!-- End .panel -->
	</div><!-- End .span6 -->
</div>
{% endblock %}

{% block pagescript %}
	<script type="text/javascript">
		$("#orange_mainbundle_actionreport_date").attr('disabled', 'disabled');
		$("#orange_mainbundle_actionreport_description").attr('disabled', 'disabled');
	</script>
{% endblock %}