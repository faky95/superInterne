{% extends '::base.html.twig' %}

{% block content -%}
		<div class="row">
			<div class="col-lg-12">
				<div class="panel panel-default">
					<div class="panel-heading">
					    <h4> 
					        <span>Ajout d'un  Projet</span>
					    </h4>
					</div>
			    <form novalidate="novalidate" class="form-horizontal" action="{{ path('creer_projet') }}" method="post" role="form">
			    <div class="panel-body">
	                {{ form_row(form.libelle,  {'attr': {'class': 'form-control'}}) }}
					{{ form_row(form.description,  {'attr': {'class': 'form-control'}}) }}
	                {{ form_row(form.chefProjet, {'attr': {'class': 'nostyle form-control'}}) }}
 					{{ form_row(form.tmp_membre,  {'attr': {'class': 'select2 form-control'}}) }}
	                {{ form_row(form._token) }}
                	     <div class="form-actions">
							<div class="col-lg-offset-3 col-lg-9">
							    {{ form_widget(form.add) }}
							    {{ form_widget(form.cancel, {attr: {class: 'btn btn-die'}}) }}
							</div>
						</div><!-- End .form-group  -->  
	                
				</form>
				</div><!-- End .panel -->
			</div><!-- End .span12 -->
		</div>
{% endblock %}

{% block pagescript %}
{% endblock %}