<!DOCTYPE HTML PUBLIC "-//W3C//DTD XHTML 1.0 Transitional //EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Template mailing Alsacreations</title>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
   <meta content="width=device-width">
    <style type="text/css">
    /* Fonts and Content */
    body, td { font-family: 'Helvetica Neue', Arial, Helvetica, Geneva, sans-serif; font-size:14px; }
    body { background-color: #FFFFFF; margin: 0; padding: 0; -webkit-text-size-adjust:none; -ms-text-size-adjust:none; }
    h2{ padding-top:12px; /* ne fonctionnera pas sous Outlook 2007+ */color:#0E7693; font-size:22px; }
    
    @media only screen and (max-width: 480px) { 

        table[class=w275], td[class=w275], img[class=w275] { width:135px !important; }
        table[class=w30], td[class=w30], img[class=w30] { width:10px !important; }  
        table[class=w580], td[class=w580], img[class=w580] { width:280px !important; }
        table[class=w640], td[class=w640], img[class=w640] { width:300px !important; }
        img{ height:auto;}
         /*illisible, on passe donc sur 3 lignes */
        table[class=w180], td[class=w180], img[class=w180] { 
            width:280px !important; 
            display:block;
        }    
        td[class=w20]{ display:none; }    
    } 
    .orange{
	  color:#ff6600; 
	}

    </style>
   
</head>
<body style="margin:0px; padding:0px; -webkit-text-size-adjust:none;">

    <table width="100%" cellpadding="0" cellspacing="0" border="0" style="background-color:rgb(42, 55, 78)" >
        <tbody>
            <tr>
                <td align="center" bgcolor="#A9A9A9">
                    <table  cellpadding="0" cellspacing="0" border="0">
                        <tbody>                            
                            <tr>
                                <td class="w640"  width="640" height="10"></td>
                            </tr>
                            <tr>
                                <td class="w640"  width="640" height="10"></td>
                            </tr>
                            <!-- entete -->
                            <tr class="pagetoplogo">
                                <td class="w640"  width="640">
                                    <table  height="90" class="w640"  width="640" cellpadding="0" cellspacing="0" border="0" bgcolor="#000000">
                                        <tbody>
                                            <tr>
                                                <td class="w30"  width="30"></td>
                                                <td  class="w580"  width="580" valign="middle" align="left">
                                                   
                                                   <span style="font-weight: 100;color: #FF6600; font-size: 40px">SUPER</span>
                                                   
                                                </td> 
                                                <td class="w30"  width="30"></td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </td>
                            </tr>

                            <!-- separateur horizontal -->
                            <tr>
                                <td  class="w640"  width="640" height="1" bgcolor="#d7d6d6"></td>
                            </tr>
							
							<!-- contenu -->
								 <tr class="content">
								     <td class="w640" class="w640"  width="640" bgcolor="#ffffff">
								         <table class="w640"  width="640" cellpadding="0" cellspacing="0" border="0">
								             <tbody>
								                 <tr>
								                     <td  class="w30"  width="30"></td>
								                     <td  class="w580"  width="580">
								                         <!-- une zone de contenu -->
								                         <table class="w580"  width="580" cellpadding="0" cellspacing="0" border="0">
															  <tbody>      
															      <tr>
															          <td class="w580"  width="580">
															              <h2 style="color:#FF6600; font-size:22px; padding-top:12px;">
															                  Rappel d'échéances.
															              </h2>
															              <div width="580" align="left" class="article-content">
															            Bonjour {{ porteur }} ,<br><br>
															           	<span style="color: red;"> Ceci est un mail de notification des échéances des actions.</span><br><br>
																		<br>
																		<table class="w580" width="580" cellspacing="0" cellpadding="2" border="1">
																		  <tr>
																		    <th>Référence</th>
																		    <th>Libellé</th>
																		    <th width="100px+">Délai initial</th>
																		    <th>Echéances</th>
																		    <th>Instance</th>
																		  </tr>
																		{% set actions = data['action'] %}
																		{% for action in actions %}
																			<tr>
																				<td style="text-align:center;"><a style="color: #ff6600; text-decoration: none" href="{{ url('details_action', { 'id': action['id']}) }}">{{ action['reference'] }}</a>
																				{% if action['action_generique'] !=null %}
																					<br><span style="font-size:12px">rattaché à l'action générique </span><br><a style="color: #ff6600; text-decoration: none" href="{{ url('details_actiongenerique', { 'id': action['action_generique'].id}) }}">{{ action['action_generique'].reference }}</a>
																				{% endif %}
																				</td>
																				<td>{{ action['libelle'] }}</td>
																				<td>{{ action['delai'] }}</td>
																				<td>Jour J {{ action['jours'] }}</td>
																				<td>{{ action['instance'] }}</td>
																			</tr>
																		{% endfor %}
																		</table>
																		<br><br>
																		<b>Veuillez solder vos actions ou bien changer leur date d'échéance</b>
																		<br><br>
															              </div>
															          </td>
															      </tr>
															     <tr>
															          <td class="w580"  width="580" height="1" bgcolor="#c7c5c5">
															          </td>
															      </tr>
															      {% if data['action_generique'] is defined and data['action_generique'] is not empty %}
																   <tr>
																      <br>
																	  <td style="text-align:center; color:#ff6600;padding: 15px;font-weight:bold"><u>Infos globales sur les actions génériques</u></td>
																	  <br><br>
															      </tr>
															      <tr>
															          <td >
																	   <table class="w580" width="580" cellspacing="0" cellpadding="3" border="1">
																	   {% set actionsGenerique = data['action_generique'] %}
																	        {% for ag in actionsGenerique %}
    																		    <tr ><td colspan="3" style="background: #e6e6e6;text-align:center; padding: 3px;">Action générique <b class="orange">{{ ag['ref'] }}</b></td></tr>
    																			<tr style="background:#f7f7f7">
    																		    <th>Statut</th>
    																		    <th >Nombre d'actions</th>
    																		    <th>Pourcentage</th>
    																		    </tr>
                                                                                {% for lib,val in ag['stats'] %}
    																		      <tr>
        																		    <th>{{ lib }}</th>
        																		    <td style="text-align:center">{{ val }}</td>
        																		    <td style="text-align:center">{{ (val*100) / ag['nbActions'] ~ '%'  }}</td>
        																		   </tr>
    																		    {% endfor  %}
    																		    <tr class="orange" style="background:#f7f7f7">
        																		    <th>Total</th>
        																		    <th >{{  ag['nbActions'] }}</th>
        																		    <th>100%</th>
    																		    </tr>
																		    {% endfor %}
																		 </table>
																		</td>
																   </tr>
																   {% endif %}
															  </tbody>
								                         </table>
								                         <!-- fin zone -->  
								
								                         <table align="right" class="w580"  width="580" cellpadding="0" cellspacing="0" border="0">
								                         	<tbody >
														      <p align="right"><em>Pour plus d'infos, <a target="_blank" href="{{ url('dashboard') }}">Accédez à SUPER</a></em></p>
														  	</tbody>
								                         </table>
								                     </td>
								                     <td class="w30" height="10" class="w30"  width="30"></td>
								                 </tr>
								             </tbody>
								         </table>
								     </td>
								 </tr>
                            <!--  separateur horizontal de 15px de haut -->
                            <tr>
                                <td class="w640"  width="640" height="30" bgcolor="#ffffff"></td>
                            </tr>

                            <!-- pied de page -->
                            <tr class="pagebottom">
                                <td class="w640"  width="640">
                                    <table class="w640"  width="640" cellpadding="0" cellspacing="0" border="0" bgcolor="#000000">
                                        <tbody>
                                            <tr>
                                                <td colspan="5" height="10"></td>
                                            </tr>
                                            <tr>
                                                <td class="w30"  width="30"></td>
                                                <td class="w580"  width="580" valign="top">
                                                    <p align="right" class="pagebottom-content-left">
                                                        <a style="color:#FF6600;" href="www.orange.sn"><span style="color:#FF6600;">SONATEL MULTIMEDIA 2015</span></a>
                                                    </p>
                                                </td>
                                                <td class="w30"  width="30"></td>
                                            </tr>
                                            <tr>
                                                <td colspan="5" height="10"></td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </td>
                            </tr>
                            <tr>
                                <td class="w640"  width="640" height="60"></td>
                            </tr>
                        </tbody>
                    </table>
                </td>
            </tr>
        </tbody>
    </table>
</body>
</html>