{% extends '::base.html.twig' %}

{% form_theme form 'OrangeMainBundle:FormTheme:fields.html.twig' %}

{% block content -%}
<!-- heading -->
<div class="heading">
	<h3>{% block page_title %} Ajout d'un groupe {% endblock %}</h3>                    
</div>
<!-- End .heading-->
<div class="row">
	<div class="col-lg-12">
			<div class="panel panel-default">
				<div class="panel-heading">
				    <h4> 
				        <span>Ajout Groupe</span>
				    </h4>
				</div>
				<div class="panel-body">
				    <form novalidate="novalidate" class="form-horizontal" action="{{ path('creer_groupe') }}" method="post" role="form">
				    	<div class="form-group">
			                {{ form_widget(form.name,  {'attr': {'class': 'form-control'}}) }}
			                {{ form_widget(form.email,  {'attr': {'class': 'form-control'}}) }}
		                </div>
		                <div class="form-group">
		                	{{ form_widget(form.tmp_membre,  {'attr': {'class': 'select2 form-control', 'style' : 'width: 200%'}}) }}
		                </div>
			                {{ form_row(form.description,  {'attr': {'class': 'form-control'}}) }}
			                {{ form_row(form._token) }}
				        <div class="form-group">
							<div class="col-lg-offset-2 col-lg-9">
					    		{{ form_row(form.add) }}
							</div>
						</div><!-- End .form-group  -->  
					</form>
				</div>
			</div><!-- End .panel -->
	</div><!-- End .span6 -->
</div>
{% endblock %}

{% block pagescript %}
{% endblock %}