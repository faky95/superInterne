{% form_theme edit_form 'OrangeMainBundle:FormTheme:fields.html.twig' %}
<div class="row">
    <div class="col-lg-12">
    	<div class="panel panel-default">
	         <div class="panel-heading">
				<h4> 
					<span>Modifier Password</span>
				</h4>
	         </div>
	        <div class="panel-body with-footer">
		        <form novalidate="novalidate" action="{{ path('change_password', {'id': entity.id}) }}" method = "post"  class="form-horizontal" role="form">
                	<div class="form-group hidden">
                        {{ form_widget(edit_form.nom, {'attr': {'class': 'form-control'}}) }}
                        {{ form_widget(edit_form.prenom, {'attr': {'class': 'form-control'}}) }}
                  	</div><!-- End .form-group  -->
					  	<div class="form-group hidden">
                        {{ form_widget(edit_form.username, {'attr': {'class': 'form-control'}}) }}
                       
                  	</div><!-- End .form-group  -->
					   	<div class="form-group">
						<label class="col-lg-4 control-label" for="username">Nouveau Mot de passe:</label>
					 	<div class="col-lg-7" style="margin-left:50px;">
							{{ form_widget(edit_form.plainPassword.first, {'attr': {'class': 'form-control' }}) }}
							{{ form_widget(edit_form.plainPassword.second, {'attr': {'class': 'form-control'}}) }} 
						</div>
                  	</div><!-- End .form-group  -->
                  	<div class="form-group hidden">
                        {{ form_widget(edit_form.matricule, {'attr': {'class': 'form-control'}}) }}
                        {{ form_widget(edit_form.telephone, {'attr': {'class': 'mask-phoneInt form-control'}}) }}
                  	</div><!-- End .form-group  -->
                  	<div class="form-group hidden">
                        {{ form_widget(edit_form.email, {'attr': {'class': 'form-control'}}) }}
                        {{ form_widget(edit_form.structure, {'attr': {'class': 'form-control'}}) }}
                  	</div><!-- End .form-group  -->
                  
                  	<div class="form-group hidden">
                       	{{ form_widget(edit_form.manager, {'attr': {'class': 'nostyle'}}) }}
                       	{{ form_widget(edit_form.isAdmin, {'attr': {'class': 'nostyle'}}) }}
                  	</div><!-- End .form-group  -->
                  	{% if entity.structure.buPrincipal.hasConfig('BU_ACTION_GENERIQUE') %}
    			            <div class="form-group hidden" id="agAuth">
    			            	{{ form_widget(edit_form.canCreateActionGenerique, {'attr': {'class': 'nostyle'}}) }}
    			            </div><!-- End .form-group  -->
    			        {% endif %}
				  	{{ form_widget(edit_form._token) }}
                    <div class="form-group form-actions">
                        <div class="col-lg-offset-2">
                            {{ form_widget(edit_form.add)}}
							{{ form_widget(edit_form.cancel)}}
                        </div>
                    </div><!-- End .form-group  -->
				</form>
	        </div>
        </div>
    </div><!-- End .span12 -->
</div><!-- End .row -->
