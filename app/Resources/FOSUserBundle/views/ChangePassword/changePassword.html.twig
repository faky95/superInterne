<div class="modal-header">
	<button type="button" class="close" data-dismiss="modal">
		<span class="icon12 minia-icon-close"></span>
	</button>
	<h4 align="left">
		<span class="icon16 icomoon-icon-key"></span>
       	<span>Changement mot de passe</span>
	</h4>
</div>
<form novalidate="novalidate" class="form-horizontal" action="{{ path('fos_user_change_password') }}" {{ form_enctype(form) }} method="post">
	<div class="panel-body">
		{{ form_row(form.current_password,  {'attr': {'class': 'form-control'}}) }}
        {{ form_row(form.plainPassword.first,  {'attr': {'class': 'form-control'}}) }}
        {{ form_row(form.plainPassword.second,  {'attr': {'class': 'form-control'}}) }}
		{{ form_row(form._token) }}
		<!-- End .form-group  -->
	</div>
	<div class="form-actions">
		<div class="col-lg-offset-3 col-lg-9">
			<button type="submit" class="btn btn-warning submitLink" data-target="#myModal" call="refreshAfterSuccess" >Enregistrer</button>
            <button type="reset" class="btn btn-default" call="redirectModalToUrl" data-dismiss="l" >Annuler</button>
		</div>
	</div>
</form>
