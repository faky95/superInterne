{% form_theme form 'OrangeMainBundle:FormTheme:fields.html.twig' %}
					
<!-- Build page from here: -->
<div class="row">
	<div class="col-lg-12">
		<div class="page-header">
			<h3>Modifier l'utilisateur</h3>
		</div>
		<form novalidate="novalidate" action="{{ path('fos_user_profile_edit', {'id': entity.id}) }}" {{ form_enctype(form) }} method = "post"  class="form-horizontal seperator" role="form">
			<div class="form-group">
				{{ form_widget(edit_form.nom, {'attr': {'class': 'form-control'}}) }}
				{{ form_widget(edit_form.prenom, {'attr': {'class': 'form-control'}}) }}
			</div><!-- End .form-group  -->
			<div class="form-group">
				{{ form_widget(edit_form.matricule, {'attr': {'class': 'form-control'}}) }}
				{{ form_widget(edit_form.telephone, {'attr': {'class': 'mask-phoneInt form-control'}}) }}
			</div><!-- End .form-group  -->
			<div class="form-group">
				{{ form_widget(edit_form.email, {'attr': {'class': 'form-control'}}) }}
				{{ form_widget(edit_form.structure) }}
			</div><!-- End .form-group  -->
			<div class="form-group">
				{{ form_widget(edit_form.username, {'attr': {'class': 'form-control'}}) }}
				<label class="col-lg-2 control-label" for="username">Mot de passe:</label>
				<div class="col-lg-4">
					{{ form_widget(edit_form.plainPassword.first, {'attr': {'class': 'form-control'}}) }}<br>
					{{ form_widget(edit_form.plainPassword.second, {'attr': {'class': 'form-control'}}) }}
				</div>
			</div><!-- End .form-group  -->
			<div class="form-group">
					{{ form_widget(edit_form.manager, {'attr': {'class': 'nostyle'}}) }}
					{{ form_widget(edit_form.isAdmin, {'attr': {'class': 'nostyle'}}) }}
			</div><!-- End .form-group  -->
					{{ form_widget(edit_form._token) }}
			<div class="form-group">
				<div class="col-lg-offset-2">
					<button type="submit" class="btn btn-info marginR10 marginL10">Sauvegarder</button>
					<button class="btn btn-danger">Annuler</button>
				</div>
			</div><!-- End .form-group  -->
		</form>
	</div><!-- End .span12 -->
</div><!-- End .row -->